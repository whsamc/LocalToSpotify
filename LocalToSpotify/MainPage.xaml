<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LocalToSpotify.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LocalToSpotify"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        Name="MainPageGrid"
        DataContext="{x:Bind Path=Current}">
        <ScrollView>
            <StackPanel          
                Padding="30,0"
                Spacing="25">

                <!-- Static Elements -->
                <Image Source="settings_cog.png"/>

                <Button
                x:Name="SpotifyAuthPageButton"
                Content="Authenticate"
                Click="SpotifyAuthPageButton_Clicked"
                HorizontalAlignment="Right"
                Background="Transparent"
                MaxHeight="50"/>

                <TextBlock
                Text="Local to Spotify App"/>

                <TextBlock 
                Name="displayNameTextBlock"
                Text="{x:Bind Data.UserProfile.display_name}"
                FontWeight="Bold"
                Margin="50,0"/>

                <TextBox
                x:Name="musicFileInput"
                MaxWidth="750"
                PlaceholderText="e.g. C:\Users\name\folder"
                Text=""
                TextChanged="ReadFileDirectoryPath"/>

                <Button
                x:Name="ScanBtn"
                Content="Scan" 
                Click="FindInSpotify"
                HorizontalAlignment="Center"
                MaxWidth="150"
                FontFamily="Helvetica"
                FontWeight="Bold"
                FontSize="24"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!-- Dynamic Elements -->
                    <GridView Name="GridDisplayView1"
                              Grid.Column="0"
                              IsItemClickEnabled="False"
                              SelectionMode="None">
                        <GridView.ItemTemplate>
                            <DataTemplate x:Name="originalFile" x:DataType="local:MusicInfo">
                                <Grid AutomationProperties.Name="{x:Bind Title}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width= '*'/>
                                    </Grid.ColumnDefinitions>
                                    <Image
                                        Source="{x:Bind MusicCover}"
                                        Height="100"
                                        Stretch="Fill"/>
                                    <StackPanel
                                        Grid.Column="1"
                                        Margin= '8,0,0,8'>
                                        <TextBlock
                                            Text="{x:Bind Title}"
                                            Style="{ThemeResource SubtitleTextBlockStyle}"/>
                                        <StackPanel>
                                            <TextBlock
                                                Text="{x:Bind Artist}"
                                                Style="{ThemeResource CaptionTextBlockStyle}"/>
                                            <TextBlock
                                                Text="{x:Bind Album}"
                                                Style="{ThemeResource CaptionTextBlockStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>

                    <GridView Name="GridDisplayView2"
                              Grid.Column="1">
                    </GridView>
                </Grid>
            </StackPanel>
        </ScrollView>
    </Grid>
</Page>
