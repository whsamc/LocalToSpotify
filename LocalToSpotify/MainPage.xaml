<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LocalToSpotify.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LocalToSpotify"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        Name="MainPageGrid"
        DataContext="{x:Bind Path=Current}">
        <ScrollView>
            <StackPanel          
                Padding="30,0"
                Spacing="25">

                <!-- Static Elements -->
                <Image Source="settings_cog.png"/>

                <Button
                x:Name="SpotifyAuthPageButton"
                Content="Authenticate"
                Click="SpotifyAuthPageButton_Clicked"
                HorizontalAlignment="Right"
                Background="Transparent"
                MaxHeight="50"/>

                <TextBlock
                Text="Local to Spotify App"/>

                <TextBlock 
                Name="displayNameTextBlock"
                Text="{x:Bind Data.UserProfile.display_name}"
                FontWeight="Bold"
                Margin="50,0"/>

                <TextBox
                x:Name="musicFileInput"
                MaxWidth="750"
                PlaceholderText="e.g. C:\Users\name\folder"
                Text=""
                TextChanged="ReadFileDirectoryPath"/>

                <Button
                x:Name="ScanBtn"
                Content="Scan" 
                Click="FindInSpotify"
                HorizontalAlignment="Center"
                MaxWidth="150"
                FontFamily="Helvetica"
                FontWeight="Bold"
                FontSize="24"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Text="Original File"
                        Grid.Column="0"
                        FontWeight="Bold"
                        HorizontalAlignment="Right"
                        Width="500"/>
                    <TextBlock
                        Text="Spotify Result"
                        Grid.Column="1"
                        FontWeight="Bold"
                        HorizontalAlignment="Left"/>

                    <!-- Dynamic Elements -->
                    
                    <!-- Left Column -->
                    <GridView Name="GridDisplayView1"
                              Grid.Column="0"
                              IsItemClickEnabled="False"
                              SelectionMode="None"
                              Margin="0,50"
                              HorizontalAlignment="Right">

                        <!-- Item Template -->
                        <GridView.ItemTemplate>
                            <DataTemplate x:Name="originalFile" x:DataType="local:MusicInfo">
                                <Grid AutomationProperties.Name="{x:Bind Title}" Width="500">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width= "*"/>
                                    </Grid.ColumnDefinitions>
                                    <Image
                                        Source="{x:Bind MusicCover}"
                                        Height="150"
                                        Stretch="Fill"
                                        VerticalAlignment="Top"
                                        Grid.Column="0"/>
                                    <StackPanel
                                        Grid.Column="1"
                                        Margin= '8,0,0,8'>
                                        
                                        <TextBlock
                                            Text="{x:Bind Title}"
                                            Style="{ThemeResource SubtitleTextBlockStyle}"
                                            Margin="0,0,0,8"/>

                                        <StackPanel Orientation="Vertical">
                                            <TextBlock
                                                Text="{x:Bind Artist}"
                                                Style="{ThemeResource CaptionTextBlockStyle}"/>
                                            <TextBlock
                                                Text="{x:Bind Album}"
                                                Style="{ThemeResource CaptionTextBlockStyle}"/>
                                        </StackPanel>
                                        
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                        
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        
                    </GridView>
                    
                    <!-- Right Column -->
                    <GridView Name="GridDisplayView2"
                              Grid.Column="1"
                              SelectionMode="None"
                              Margin="0,50">
                        
                        <!-- Items Panel -->
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        
                        <!-- Item Template -->
                        <GridView.ItemTemplate>
                            <DataTemplate x:Name="searchResult" x:DataType="local:SpotifySearchResponse">
                                <StackPanel
                                    MinHeight="150"
                                    MaxHeight="150"
                                    Orientation="Vertical">
                                    <GridView
                                        Margin="0,0,0,0"
                                        SelectionMode="None">

                                        <!-- Panel for the individual gridviews for each result-->
                                        <GridView.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <ItemsWrapGrid MaximumRowsOrColumns="1"
                                                               Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </GridView.ItemsPanel>

                                        <!-- Result 1 -->
                                        <Grid AutomationProperties.Name="{x:Bind tracks.items[0].id}" Width="250">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width= "*"/>
                                            </Grid.ColumnDefinitions>
                                            <Image
                                                Source="{x:Bind tracks.items[0].album.images[0].url}"
                                                Height="45"
                                                Stretch="Fill"
                                                VerticalAlignment="Top"
                                                Grid.Column="0"/>
                                            <StackPanel
                                                Grid.Column="1"
                                                Orientation="Vertical"
                                                Margin="8,0,0,0">

                                                <TextBlock
                                                    Text="{x:Bind tracks.items[0].name}"
                                                    FontWeight="Bold"
                                                    FontSize="15"/>

                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock
                                                        Text="{x:Bind tracks.items[0].artists[0].name}"
                                                        FontSize="10"/>
                                                    <TextBlock
                                                        Text="{x:Bind tracks.items[0].album.name}"
                                                        FontSize="10"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>


                                        <Grid AutomationProperties.Name="{x:Bind tracks.items[1].id}" Width="250">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width= "*"/>
                                            </Grid.ColumnDefinitions>
                                            <Image
                                                Source="{x:Bind tracks.items[1].album.images[0].url}"
                                                Height="45"
                                                Stretch="Fill"
                                                VerticalAlignment="Top"
                                                Grid.Column="0"/>
                                            <StackPanel
                                                Grid.Column="1"
                                                Orientation="Vertical"
                                                Margin="8,0,0,0">

                                                <TextBlock
                                                    Text="{x:Bind tracks.items[1].name}"
                                                    FontWeight="Bold"
                                                    FontSize="15"/>

                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock
                                                        Text="{x:Bind tracks.items[1].artists[0].name}"
                                                        FontSize="10"/>
                                                    <TextBlock
                                                        Text="{x:Bind tracks.items[1].album.name}"
                                                        FontSize="10"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>


                                        <Grid AutomationProperties.Name="{x:Bind tracks.items[2].id}" Width="250">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width= "*"/>
                                            </Grid.ColumnDefinitions>
                                            <Image
                                                Source="{x:Bind tracks.items[2].album.images[0].url}"
                                                Height="45"
                                                Stretch="Fill"
                                                VerticalAlignment="Top"
                                                Grid.Column="0"/>
                                            <StackPanel
                                                Grid.Column="1"
                                                Orientation="Vertical"
                                                Margin="8,0,0,0">

                                                <TextBlock
                                                    Text="{x:Bind tracks.items[2].name}"
                                                    FontWeight="Bold"
                                                    FontSize="15"/>

                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock
                                                        Text="{x:Bind tracks.items[2].artists[0].name}"
                                                        FontSize="10"/>
                                                    <TextBlock
                                                        Text="{x:Bind tracks.items[2].album.name}"
                                                        FontSize="10"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>

                                    </GridView>
                                </StackPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>

                    </GridView>
                </Grid>
            </StackPanel>
        </ScrollView>
    </Grid>
</Page>
