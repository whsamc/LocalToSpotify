<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LocalToSpotify.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LocalToSpotify"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        Name="MainPageGrid"
        DataContext="{x:Bind Path=Current}">
        <ScrollView>
            <StackPanel          
                Padding="30,0"
                Spacing="25">

                <!-- Static Elements -->
                <!--#region -->
                <Image Source="settings_cog.png"/>

                <Button
                x:Name="SpotifyAuthPageButton"
                Content="Authenticate"
                Click="SpotifyAuthPageButton_Clicked"
                HorizontalAlignment="Right"
                Background="Transparent"
                MaxHeight="50"/>

                <TextBlock
                Text="Local to Spotify App"/>

                <TextBlock 
                Name="displayNameTextBlock"
                Text="{x:Bind Data.UserProfile.display_name}"
                FontWeight="Bold"
                Margin="50,0"/>

                <TextBox
                x:Name="musicFileInput"
                MaxWidth="750"
                PlaceholderText="e.g. C:\Users\name\folder"
                Text=""
                TextChanged="ReadFileDirectoryPath"/>

                <Button
                x:Name="ScanBtn"
                Content="Scan" 
                Click="FindInSpotify"
                HorizontalAlignment="Center"
                MaxWidth="150"
                FontFamily="Helvetica"
                FontWeight="Bold"
                FontSize="24"/>
                <!--#endregion -->

                <!-- Headers -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock
                        Text="Original File"
                        Grid.Column="0"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Width="350"/>
                    <TextBlock
                        Text="Spotify Result"
                        Grid.Column="1"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"/>
                </StackPanel>

                
                <GridView x:Name="MainResultsPageUI"
                          HorizontalAlignment="Center"
                          SelectionMode="None">

                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>

                    <GridView.ItemTemplate>
                        <DataTemplate x:Name="SearchResultCombinedUI" x:DataType="local:OriginalFileAndResult">
                            <Border Background="#232733" Margin="0,0,0,10" CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <!-- Dynamic Elements -->

                                    <!-- Left Column -->
                                    <GridView Name="GridDisplayView1"
                                              Grid.Column="0"
                                              IsItemClickEnabled="False"
                                              SelectionMode="None"
                                              HorizontalAlignment="Right"
                                              Padding="0,0,0,0">

                                        <Border Margin="10,10,5,5">
                                            <Grid Width="350" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width= "*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border CornerRadius="5" Margin="5">
                                                    <Image
                                                        Source="{x:Bind originalFile.MusicCover}"
                                                        Height="150"
                                                        Stretch="Fill"
                                                        VerticalAlignment="Center"
                                                        Grid.Column="0"/>
                                                </Border>

                                                <StackPanel
                                                    Grid.Column="1"
                                                    Margin= '8,0,0,8'>

                                                    <TextBlock
                                                        Text="{x:Bind originalFile.Title}"
                                                        Style="{ThemeResource SubtitleTextBlockStyle}"
                                                        Margin="0,0,0,8"/>

                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock
                                                            Text="{x:Bind originalFile.Artist}"
                                                            Style="{ThemeResource CaptionTextBlockStyle}"/>
                                                        <TextBlock
                                                            Text="{x:Bind originalFile.Album}"
                                                            Style="{ThemeResource CaptionTextBlockStyle}"/>
                                                    </StackPanel>

                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </GridView>

                                    <!-- Right Column -->
                                    <GridView Name="GridDisplayView2"
                                              Grid.Column="1"
                                              SelectionMode="None"
                                              Padding="0,0,0,0">

                                        <!-- Items Panel -->
                                        <GridView.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <ItemsWrapGrid Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </GridView.ItemsPanel>

                                        <Border Background="#202020" CornerRadius="5" Margin="0,5,0,0">
                                            <StackPanel
                                            MaxHeight="175"
                                            Orientation="Vertical">

                                                <GridView
                                                    Margin="5,5,0,5"
                                                    SelectionMode="Single"
                                                    IsItemClickEnabled="False"
                                                    SelectionChanged="SelectItemFromSearch"
                                                    Padding="0,0,0,0">

                                                    <!-- Panel for the individual gridviews for each result-->
                                                    <GridView.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <ItemsWrapGrid MaximumRowsOrColumns="1"
                                                                            Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </GridView.ItemsPanel>

                                                    <!-- Result 1 -->
                                                    <Grid Width="350">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width= "*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Border CornerRadius="5">
                                                            <Image
                                                            Source="{x:Bind result.tracks.items[0].album.images[0].url}"
                                                            Height="50"
                                                            Stretch="Fill"
                                                            VerticalAlignment="Top"
                                                            Grid.Column="0"/>
                                                        </Border>

                                                        <StackPanel
                                                            Grid.Column="1"
                                                            Orientation="Vertical"
                                                            Margin="8,0,0,0">

                                                            <TextBlock
                                                                Text="{x:Bind result.tracks.items[0].name}"
                                                                FontWeight="Bold"
                                                                FontSize="15"/>

                                                            <StackPanel Orientation="Vertical">
                                                                <TextBlock
                                                                    Text="{x:Bind result.tracks.items[0].artists[0].name}"
                                                                    FontSize="10"/>
                                                                <TextBlock
                                                                    Text="{x:Bind result.tracks.items[0].album.name}"
                                                                    FontSize="10"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Grid>

                                                    <!-- Result 2 -->
                                                    <Grid Width="350">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width= "*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Border CornerRadius="5">
                                                            <Image
                                                            Source="{x:Bind result.tracks.items[1].album.images[0].url}"
                                                            Height="50"
                                                            Stretch="Fill"
                                                            VerticalAlignment="Top"
                                                            Grid.Column="0"/>
                                                        </Border>

                                                        <StackPanel
                                                            Grid.Column="1"
                                                            Orientation="Vertical"
                                                            Margin="8,0,0,0">

                                                            <TextBlock
                                                                Text="{x:Bind result.tracks.items[1].name}"
                                                                FontWeight="Bold"
                                                                FontSize="15"/>

                                                            <StackPanel Orientation="Vertical">
                                                                <TextBlock
                                                                    Text="{x:Bind result.tracks.items[1].artists[0].name}"
                                                                    FontSize="10"/>
                                                                <TextBlock
                                                                    Text="{x:Bind result.tracks.items[1].album.name}"
                                                                    FontSize="10"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Grid>

                                                    <!-- Result 3 -->
                                                    <Grid Width="350">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width= "*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Border CornerRadius="5">
                                                            <Image
                                                            Source="{x:Bind result.tracks.items[2].album.images[0].url}"
                                                            Height="50"
                                                            Stretch="Fill"
                                                            Grid.Column="0"/>
                                                        </Border>

                                                        <StackPanel
                                                            Grid.Column="1"
                                                            Orientation="Vertical"
                                                            Margin="8,0,0,0">

                                                            <TextBlock
                                                                Text="{x:Bind result.tracks.items[2].name}"
                                                                FontWeight="Bold"
                                                                FontSize="15"/>

                                                            <StackPanel Orientation="Vertical">
                                                                <TextBlock
                                                                    Text="{x:Bind result.tracks.items[2].artists[0].name}"
                                                                    FontSize="10"/>
                                                                <TextBlock
                                                                    Text="{x:Bind result.tracks.items[2].album.name}"
                                                                    FontSize="10"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Grid>
                                                </GridView>
                                            </StackPanel>
                                        </Border>
                                    </GridView>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>
        </ScrollView>
    </Grid>
</Page>
